// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  seed = "prisma/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id          Int         @id @default(autoincrement())
  name        String
  email       String      @unique
  password    String
  address     String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  menuItems   MenuItem[]
}

model MenuItem {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  price       Float
  restaurant  Restaurant  @relation(fields: [restaurantId], references: [id])
  restaurantId Int
  ingredients IngredientOnMenuItem[]
}

model Ingredient {
  id          Int                 @id @default(autoincrement())
  name        String
  currentCost Float
  measurementUnit String
  menuItems   IngredientOnMenuItem[]
  costs       CostHistory[]
}

model IngredientOnMenuItem {
  id          Int       @id @default(autoincrement())
  menuItem    MenuItem @relation(fields: [menuItemId], references: [id])
  ingredient  Ingredient @relation(fields: [ingredientId], references: [id])
  menuItemId  Int
  ingredientId Int
}

model CostHistory {
  id          Int       @id @default(autoincrement())
  ingredient  Ingredient @relation(fields: [ingredientId], references: [id])
  cost        Float
  date        DateTime
  ingredientId Int
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String?
  picture  String?
  githubId Int?     @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
